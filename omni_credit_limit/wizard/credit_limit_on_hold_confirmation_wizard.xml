<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="credit_limit_on_hold_wizard_form" model="ir.ui.view">
        <field name="name">Credit Limit on Hold Wizard Form</field>
        <field name="model">creditlimit.hold_confirmation</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Do you wish to confirm this Sale Order but hold partner's Credit Limit?">
                <p>
                    Do you wish to confirm this Sale Order but hold partner's Credit Limit?
                </p>
                <footer>
                    <button name="confirm_creditlimitonhold" type="object" string="Confirm" class="btn-primary"/>
                    <button name="cancel_creditlimitonhold" type="object" string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>
