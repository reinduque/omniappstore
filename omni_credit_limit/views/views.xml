<odoo>
  <data>
    <record id="partner_credit_limit" model="ir.ui.view">
        <field name="name">Partner Credit Limit</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="groups_id" eval="[(6,0, [ref('account.group_account_user'),ref('account.group_account_invoice')])]" />
        <field name="arch" type="xml">
          <xpath expr="//page[@name='sales_purchases']/group/group[3]" position="after">
            <group string="Credit Limit">
              <field name="allow_credit" string="Allow Credit"/>
              <field name="credit_limit" string="Credit Limit" attrs="{'readonly': [('allow_credit','=', False)]}"/>
              <field name="credit_limit_on_hold" string="Credit Limit on Hold"/>
            </group>
          </xpath>
        </field>
    </record>

    <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">Add Credit limit state</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
          <xpath expr="//header/field[@name='state']" position="replace">
            <field name="state" widget="statusbar" statusbar_visible="draft,sent,credit_limit,sale"/>
          </xpath>
        </field>
    </record>
    <record id="sale_order_newconfirmbutton" model="ir.ui.view">
        <field name="name">New Confirm Sale Button</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
          <xpath expr="//header/button[@id='action_confirm']" position="replace">
            <button name="action_confirm2" id="action_confirm2" string="Confirm" class="btn-primary" type="object" attrs="{'invisible': [('state', 'not in', ['sent'])]}"/>
          </xpath>
          <xpath expr="//header/button[@name='action_confirm'][1]" position="replace">
            <button name="action_confirm2" string="Confirm" type="object" attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
          </xpath>
        </field>
    </record>
  </data>
</odoo>